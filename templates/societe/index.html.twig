                                    <option value="108">108</option>
                                    <option value="109">109</option>
                                    <option value="110">110</option>
                                </optgroup>
                            <select>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label for="">Ville </label>{#{{form_widget(formSociete.ville)}}  #}
                                    <select size=1 name="ville" id="ville" class="input">
                                        <optgroup label="Ville">
                                        </optgroup>
                                    </select> 
                                                    
                            </div>
                        </div>
                    </div>

                    
            

                {# {{ form_end(formSociete) }} #}
                    <button class="btn btn-primary" type="submit" id="bouton">AJOUTER</button>


                </div>

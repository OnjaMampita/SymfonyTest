<h1>FORMULAIRE SOCIETE</h1>
        {# {{ form_start(formSociete) }} #}
    <form action="" method="post">
        <div class="container mt-5 mb-5 d-flex justify-content-center">
            <div class="card px-1 py-4">
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                            <label for="">Nom </label>  {# {{form_widget(formSociete.nom)}} #}
                            <input type="text" name="nom" id="nom" placeholder="Nom de la société" class="input"/>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label for="">Description</label> {#{{form_widget(formSociete.description)}} #}
                                <textarea name="description" placeholder="Déscription de la société" class="input"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label for="">Type  </label> {# {{form_widget(formSociete.type)}} #}

                                <div>
                                        <input type="checkbox" name="type" id="type" checked/>
                                        <label for="type2">SARL</label>
                                    
                                        <input type="checkbox"  name="type2" id="type2" />
                                        <label for="type2">EURL</label>
                                        <input type="checkbox"  name="type3" id="type3" />
                                        <label for="type3">SELARL</label>
                                        <input type="checkbox"  name="type4" id="tye4" />
                                        <label for="type4">SA</label>
                                        <input type="checkbox"  name="type5" id="type5" />
                                        <label for="type5">SASU</label>
                                        <input type="checkbox"  name="type6" id="type6" />
                                        <label for="type6">SNC</label>
                                        <input type="checkbox"  name="type7" id="type7" />
                                        <label for="type7">SCP</label>
                                </div>
                            </div>
                        </div>
                    </div>

                


                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label for="">Code postal</label>  {#{{form_widget(formSociete.codePostal)}}  #}
                            <select name="codepostal" id="codepostal"  onchange="gensel2();" class="input">
                                <optgroup>
                                    <option value="101">101</option>
                                    <option value="102">102</option>

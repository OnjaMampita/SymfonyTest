<script type="text/javascript">

      var liste = new Array(
            new Array("Antananarivo"),
            new Array("Antananarivo-Sud"),
             new Array("Antananarivo-Nord"),
             new Array("Ambatolampy"),
            new Array("Ambohidratrimo"),
            new Array("Andramasina"),
            new Array("Anjozorobe"),
            new Array("Ankazobe"),
            new Array("Antanifotsy"),
            new Array("Antsirabe")
        );
        function gensel2() {
            var s1 = document.getElementById("codepostal");
            var s2 = document.getElementById("ville");
            s2.length = 0;
            for (var n = 0; n < liste[s1.selectedIndex].length; n++) {
                s2.length++;
                s2.options[s2.length - 1].text = liste[s1.selectedIndex][n];
            }
        }
    </script>

